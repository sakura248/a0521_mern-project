{
  "name": "mern-project",
  "version": "1.0.0",
  "description": "skincare builder app",
  "main": "server.js",
  "author": "Sakura Nishiya",
  "license": "MIT",
  "scripts": {
    "start": "node backend/server.js",
    "build": "cd frontend && yarn run build",
    "install-client": "cd frontend && yarn install",
    "heroku-postbuild": "yarn run install-client && yarn run build",
    "server": "nodemon backend/server.js",
    "develop": "concurrently --kill-others-on-fail \"yarn run server\" \"yarn run start --prefix client\"",
    "start": "concurrently --kill-others-on-fail \"yarn run server\" \"yarn run start --prefix client\"",
    "client": "yarn --cwd frontend start",
    "dev": "concurrently \"yarn run server\" \"yarn run client \""
  },
  "dependencies": {
    "axios": "^0.26.0",
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "create-react-app": "^5.0.0",
    "dotenv": "^16.0.0",
    "express": "^4.17.2",
    "express-async-handler": "^1.2.0",
    "frontend": "^2.0.0-alpha.4",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.2.1"
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "nodemon": "^2.0.15"
  }
}
